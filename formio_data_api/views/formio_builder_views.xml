<odoo>
    <record id="action_synchronize_formio_components" model="ir.actions.server">
        <field name="name">Sync Components</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="model_id" ref="model_formio_component"/>
        <field name="binding_model_id" ref="model_formio_builder"/>
        <field name="code">
active_ids = env.context.get('active_ids')
if active_ids:
    records = env['formio.builder'].browse(active_ids)
    model.synchronize_formio_components(records)
        </field>
    </record>
</odoo>