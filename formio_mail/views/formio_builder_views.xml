<odoo>
    <record id="view_formio_builder_form_inherit" model="ir.ui.view">
        <field name="name">formio.builder.inherit</field>
        <field name="model">formio.builder</field>
        <field name="inherit_id" ref="formio.view_formio_builder_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="mail" string="Mail">
                    <group name="mail_settings" string="Mail Settings" colspan="2">
                        <field name="mail_active" string="Mailings active"/>
                        <field name="mail_report_id" string="Report" attrs="{'required': [('mail_active', '!=', False)]}"/>
                    </group>
                    <group name="mail_recipients" string="Recipients" colspan="2">
                        <field name="mail_recipients_partner_ids" string="Partner" widget="many2many_tags"/>
                        <field name="mail_recipients" string="Addresses"/>
                        <field name="mail_recipients_form_components" string="Form"/>
                    </group>
                    <group name="message" string="Message" col="6" colspan="2">
                        <field name="mail_subject" string="Subject" colspan="6"/>
                        <br/>
                        <field name="mail_body_html" string="Body" widget="html" nolabel="1" colspan="6"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
